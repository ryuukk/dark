	"targetName":"samples",
	"targetType": "executable",
	"targetPath": "bin",
    "workingDirectory": "bin",
    
    "importPath": ["../dark/src"],

	"dependencies": {
		"dark": {"path":"../"}
	},

    "versions": [
		"GL_33",
		"GLFW_32"
	],
	
	"buildTypes": {
		"release": {
			"buildOptions": [
				"releaseMode",
				"inline",
				"optimize",
				"noBoundsCheck",
				"debugInfo"
			],
			"dflags": [
				"-O",
				"-mcpu=native",
				"-release",
				"-boundscheck=off"
			]
		},
		"debug_gc": {
            "buildOptions": ["debugMode", "debugInfo"],
			"dflags":["-profile=gc"]
		},
		"debug": {
            "buildOptions": ["debugMode", "debugInfo"]
		}
    },
    

    "configurations": [
        {
            "name": "hello",
            "sourcePaths": [
                "01_hello/src"
            ]
        },
        {
            "name": "input",
            "sourcePaths": [
                "02_input/src"
            ]
        },
        {
            "name": "triangle",
            "sourcePaths": [
                "03_triangle/src"
            ]
        },
        {
            "name": "textured_quad",
            "sourcePaths": [
                "04_textured_quad/src"
            ]
        },
        {
            "name": "spritebatch",
            "sourcePaths": [
                "05_spritebatch/src"
            ]
        },
        {
            "name": "cube",
            "sourcePaths": [
                "06_cube/src"
            ]
        },
        {
            "name": "model",
            "sourcePaths": [
                "07_model/src"
            ]
        },
        {
            "name": "renderbatch",
            "sourcePaths": [
                "08_renderbatch/src"
            ]
        },
        {
            "name": "skeletal_animation",
            "sourcePaths": [
                "09_skeletal_animation/src"
            ]
        },
        {
            "name": "experiments",
            "sourcePaths": [
                "99_experiments/src"
            ]
        }
    ]
}
